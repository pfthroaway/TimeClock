<Window x:Name="WindowMain" x:Class="TimeClock.Pages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Style="{StaticResource WindowStyle}"
        Title="Time Clock"
        WindowState="Maximized"
        ResizeMode="CanResize"
        SizeToContent="Manual"
        WindowStartupLocation="CenterScreen"
        Loaded="WindowMain_Loaded">
    <DockPanel>
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_File">
                <Separator />
                <MenuItem x:Name="MnuFileExit" Header="_Exit" Click="MnuFileExit_Click" />
            </MenuItem>
            <MenuItem x:Name="MnuAdmin" Header="_Admin" Click="MnuAdmin_Click" />
        </Menu>
        <Frame
            x:Name="MainFrame"
            ScrollViewer.VerticalScrollBarVisibility="Auto"
            ScrollViewer.HorizontalScrollBarVisibility="Auto"
            ScrollViewer.CanContentScroll="True"
            NavigationUIVisibility="Hidden"
            SizeChanged="MainFrame_OnSizeChanged"
            Source="LoginPage.xaml"
            HorizontalContentAlignment="Stretch"
            VerticalContentAlignment="Stretch">
            <Frame.LayoutTransform>
                <ScaleTransform x:Name="ApplicationScaleTransform"
                                CenterX="0"
                                CenterY="0"
                                ScaleX="{Binding ElementName=WindowMain, Path=ScaleValue}"
                                ScaleY="{Binding ElementName=WindowMain, Path=ScaleValue}" />
            </Frame.LayoutTransform>
        </Frame>
    </DockPanel>
</Window>